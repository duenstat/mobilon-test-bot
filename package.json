{
  "name": "mobilon-test-bot",
  "version": "1.0.0",
  "description": "Битрикс24 бот для отправки утренних приветствий сотрудникам",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "test": "node test/botTest.js",
    "register": "node src/cli.js register",
    "sync-users": "node src/cli.js sync-users",
    "send-greetings": "node src/cli.js send-greetings",
    "stats": "node src/cli.js stats",
    "cli": "node src/cli.js",
    "db:init": "node -e \"import('./src/utils/database.js').then(d => d.default.connect().then(() => console.log('DB initialized')))\"",
    "pm2:start": "pm2 start src/index.js --name morning-bot",
    "pm2:stop": "pm2 stop morning-bot",
    "pm2:restart": "pm2 restart morning-bot",
    "pm2:logs": "pm2 logs morning-bot",
    "docker:build": "docker build -t morning-bot .",
    "docker:run": "docker run -d --name morning-bot -p 3000:3000 --env-file .env morning-bot"
  },
  "bin": {
    "bot-cli": "./src/cli.js"
  },
  "keywords": [
    "bitrix24",
    "bot",
    "morning",
    "greeting",
    "scheduler",
    "automation"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "@bitrix24/b24jssdk": "^0.4.1",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "cron-parser": "^4.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "ora": "^7.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}